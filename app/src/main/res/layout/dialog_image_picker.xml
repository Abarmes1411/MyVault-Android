<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/movie_profile_pic_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/movie_profile_pic"
        android:tag="movie_profile_pic"
        android:layout_margin="8dp" />

    <ImageView
        android:id="@+id/show_profile_pic_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/show_profile_pic"
        android:tag="show_profile_pic"
        android:layout_margin="8dp" />

    <ImageView
        android:id="@+id/game_profile_pic_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/game_profile_pic"
        android:tag="game_profile_pic"
        android:layout_margin="8dp" />

    <ImageView
        android:id="@+id/manganovel_profile_pic_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/manganovel_profile_pic"
        android:tag="manganovel_profile_pic"
        android:layout_margin="8dp" />
</LinearLayout>
